  "scripts": {
    "dev-scss": "sass src/css:src/css --watch",
    "dev-build": "postcss src/css/styles.css -o src/css/styles.css --watch",
    "dev": "concurrently --names \"SASS,PostCSS\" \"npm run dev-scss\" \"npm run dev-build\"",

    "prod-wb": "webpack --config webpack.config.js",
    "prod-scss": "sass src/css:src/css",
    "prod-tw": "postcss src/css/styles.css -o docs/src/css/styles.css --minify",
    "prod-build": "npm-run-all --serial prod-wb prod-scss prod-tw"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "copy-webpack-plugin": "^12.0.2",
    "html-webpack-plugin": "^5.6.3",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-scss": "^4.0.9",
    "sass": "^1.80.4",
    "tailwindcss": "^3.4.14",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
